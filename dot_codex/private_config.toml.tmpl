{{- $githubToken := trim (gopass "github/tokens/personal") -}}
{{- $jiraToken := trim (gopass "jira/yarrl/token") -}}
{{- $jiraUrl := trim (gopass "jira/yarrl/url") -}}
{{- $jiraUser := trim (gopass "jira/yarrl/user") -}}
model = "gpt-5-codex"
model_provider = "openai"
model_reasoning_effort = "medium"
approval_policy = "on-request"
sandbox_mode = "workspace-write"

[features]
rmcp_client = true
view_image_tool = true
web_search_request = true

[tui]
notifications = true

[model_providers.ollama]
name = "Ollama"
base_url = "http://localhost:11434/v1"

[mcp_servers.apple]
command = "/Applications/iMCP.app/Contents/MacOS/imcp-server"

[mcp_servers.apple-mail]
command = "bun"
args = ["run", "/Users/aleksy/.mcp/apple-mcp/index.ts"]

[mcp_servers.playwright]
command = "mcp-server-playwright"
args = ["--browser=webkit", "--isolated"]

# [mcp_servers.github]
# command = "github-mcp-server"
# args = ["stdio", "--toolsets=all"]

# [mcp_servers.github.env]
# GITHUB_PERSONAL_ACCESS_TOKEN = "{{ $githubToken }}"

[mcp_servers.jira-yarrl]
command = "mcp-atlassian"
args = [
  "--transport=stdio",
  "--jira-url={{ $jiraUrl }}",
  "--jira-username={{ $jiraUser }}",
  "--jira-token={{ $jiraToken }}",
]

[mcp_servers.package-registry]
command = "npx"
args = ["-y", "package-registry-mcp"]
