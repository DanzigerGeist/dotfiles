model = "gpt-5.3-codex"
model_provider = "openai"
model_reasoning_effort = "xhigh"
approval_policy = "on-request"
sandbox_mode = "workspace-write"
web_search = "live"

[features]
collab = true
apps = true

[tui]
alternate_screen = "auto"
animations = true
notification_method = "auto"
notifications = true
show_tooltips = true
status_line = [
  "model-with-reasoning",
  "project-root",
  "git-branch",
  "context-remaining",
]

[mcp_servers.atlassian_yarrl]
command = "mcp-atlassian"
args = ["--transport=stdio"]
env.JIRA_URL = "{{ trim (gopass "yarrl/atlassian/url") }}"
env.JIRA_USERNAME = "{{ trim (gopass "yarrl/atlassian/user") }}"
env.JIRA_API_TOKEN = "{{ trim (gopass "yarrl/atlassian/token") }}"

[mcp_servers.context7]
command = "context7-mcp"
args = []
env.CONTEXT7_API_KEY = "{{ trim (gopass "personal/context7/token") }}"

[mcp_servers.genesys_bnp]
command = "npx"
args = ["-y", "@makingchatbots/genesys-cloud-mcp-server"]
env.GENESYSCLOUD_REGION = "{{ trim (gopass "yarrl/genesys/bnp/region") }}"
env.GENESYSCLOUD_OAUTHCLIENT_ID = "{{ trim (gopass "yarrl/genesys/bnp/client/id") }}"
env.GENESYSCLOUD_OAUTHCLIENT_SECRET = "{{ trim (gopass "yarrl/genesys/bnp/client/secret") }}"

[mcp_servers.genesys_inpost]
command = "npx"
args = ["-y", "@makingchatbots/genesys-cloud-mcp-server"]
env.GENESYSCLOUD_REGION = "{{ trim (gopass "yarrl/genesys/inpost/region") }}"
env.GENESYSCLOUD_OAUTHCLIENT_ID = "{{ trim (gopass "yarrl/genesys/inpost/client/id") }}"
env.GENESYSCLOUD_OAUTHCLIENT_SECRET = "{{ trim (gopass "yarrl/genesys/inpost/client/secret") }}"

[mcp_servers.github]
command = "github-mcp-server"
args = ["stdio", "--toolsets=all"]
env.GITHUB_PERSONAL_ACCESS_TOKEN = "{{ trim (gopass "personal/github/tokens/personal") }}"

[mcp_servers.grep_app]
command = "grep-mcp"
args = []
[mcp_servers.openai_developer_docs]
url = "https://developers.openai.com/mcp"

[mcp_servers.package_registry]
command = "npx"
args = ["-y", "package-registry-mcp"]

[mcp_servers.playwright]
command = "playwright-mcp"
args = ["--browser=webkit", "--isolated"]

[mcp_servers.slack_mirabridge]
command = "slack-mcp-server"
args = ["--transport", "stdio"]
env.SLACK_MCP_XOXC_TOKEN = "{{ trim (gopass "mirabridge/slack/xoxc") }}"
env.SLACK_MCP_XOXD_TOKEN = "{{ trim (gopass "mirabridge/slack/xoxd") }}"

[mcp_servers.snyk]
command = "snyk"
args = ["mcp", "-t", "stdio"]

[mcp_servers.terraform]
command = "terraform-mcp-server"
args = ["stdio"]


