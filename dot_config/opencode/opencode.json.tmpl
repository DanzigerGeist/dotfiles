{
  "$schema": "https://opencode.ai/config.json",
  "enabled_providers": ["openai"],
  "model": "openai/gpt-5.3-codex",
  "provider": {
    "openai": {
      "models": {
        "gpt-5.3-codex": {
          "options": {
            "reasoningEffort": "xhigh"
          }
        }
      }
    }
  },
  "default_agent": "plan",
  "share": "disabled",
  "keybinds": {
    "leader": "ctrl+space"
  },
  "permission": {
    "*": "allow",
    "external_directory": {
      "*": "ask",
      "~/**": "allow"
    },
    "edit": {
      "*": "allow",
      "~/**": "ask",
      "{env:PWD}/**": "allow"
    }
  }
}
